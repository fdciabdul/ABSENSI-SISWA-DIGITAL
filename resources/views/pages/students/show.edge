                   <!-- Important Notes -->
                   <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                       <div class="flex items-start">
                           <i data-lucide="alert-triangle" class="w-5 h-5 text-red-600 mr-3 mt-0.5"></i>
                           <div>
